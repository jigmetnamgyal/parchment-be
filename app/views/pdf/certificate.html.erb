<div>
  <div>
    <%= image_tag(certificate.institution_logo_url) %>
  </div>
  <div>
    <p><%= certificate.institution_name %></p>
    <p><%= certificate.description %></p>
    <p><%= certificate.major %></p>
    <p>to</p>
    <p><%= certificate.awarded_to %></p>
    <p>who has satisfied the Examiners in the Final examinations for the degree with distinction </p>
  </div>

  <div>
    <p><%= Date.current %></p>
    <div>
      <%= image_tag("https://upload.wikimedia.org/wikipedia/commons/a/ad/Wonho-Signature.svg") %>
      <p>Registrar and Secretary</p>
    </div>

    <div>
      <% if certificate.qr_code_url.present? %>
        <%= image_tag(certificate.qr_code_url) %>
        <p>Scan to view your NFT certificate</p>
      <% end %>
    </div>
  </div>
</div>